---
import Layout from '../layouts/Layout.astro';
import '../styles/main.css';
---

<Layout title="Welcome to Astro.">
	<main>
	<body class="bg-black">
		<header class="z-0 relative">
			<img class="z-0 " src="/cracked_ground.jpg" alt="Dried ground with big cracks">
			<div class="text-center absolute top-1/3 md:top-1/4 mx-auto w-2/3 md:w-1/2 right-0 left-0">
				<h1 class="text-6xl md:text-8xl text-teal-300 font-bold">Finite Dirt Worx</h1>
			</div>
			<div class="absolute bottom-0 md:bottom-60 h-32 w-full bg-gradient-to-t from-black "></div>
		</header>
		<main class="relative md:bottom-60">
			<div class="z-10 md:bg-black">
				<div class="mx-10  flex md:flex-row flex-col justify-evenly">
					<img class="hidden md:block rounded-2xl md:w-1/3 md:h-1/3" src="/driveway1.jpg" alt="Skid steer on gravel driveway">
					<div class="mx-auto my-auto px-auto">
						<h2 class="text-3xl md:text-6xl text-center my-auto mx-auto">Contact us for your dirt moving needs</h2>
						<h3 class="text-lg md:text-5xl mx-auto mt-5 text-center md:pt-20">Email: <a href="mailto:finitedirtworx@gmail.com">finitedirtworx@gmail.com</a></h3>
						<h3 class="text-lg md:text-5xl mx-auto text-center">Phone: (616) 350-7724</h3>
					</div>
					<img class="mx-auto mt-10 block md:hidden rounded-2xl w-1/2 h-1/2 " src="/driveway1.jpg" alt="Skid steer on gravel driveway">
				</div>
				<div class="flex flex-col md:flex-row mx-10 pt-10 justify-evenly">
					<h2 class="text-4xl md:text-6xl text-center my-auto">Common Services</h2>
					<div class="my-auto mt-10">
						<ul class="text-2xl md:text-4xl md:list-disc mx-auto text-center md:text-left">
							<li>Basement Digs</li>
							<li>Driveway Installs</li>
							<li>Custom Retaining Walls</li>
							<li>Septic Installs</li>
							<li>Pond Digs</li>
						</ul>
					</div>
				</div>
				<div class="flex justify-evenly w-full py-20 md:flex-row flex-col ">
					<img class="rounded-2xl h-1/2 w-1/2 md:h-1/4 md:w-1/4 mx-auto" src="/leveling1.jpg" alt="Skid steer next to leveled ground">
					<img class="rounded-2xl h-1/2 w-1/2 md:h-1/4 md:w-1/4 mx-auto py-10 md:py-0" src="/driveway2.jpg" alt="House with leveled driveway">
					<img class="rounded-2xl h-1/2 w-1/2 md:h-1/4 md:w-1/4 mx-auto" src="/truck_trailer.jpg" alt="Truck with trailer being loaded with dirt">
				</div>
			</div>
		</main>
		<footer class="">
		</footer>
	</body>
	</main>
</Layout>
